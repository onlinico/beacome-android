<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="@dimen/three_line_list_item_height">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/iv_image"
        android:layout_width="@dimen/item_image_size"
        android:layout_height="@dimen/item_image_size"
        android:layout_centerVertical="true"
        android:layout_marginEnd="16dp"
        android:layout_marginStart="16dp"/>

    <TextView
        android:id="@+id/tv_email"
        style="@style/AppTheme.TextVcardContactType"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginStart="72dp"
        android:text="@string/item_vcard_email"/>

    <TextView
        android:id="@+id/tv_name"
        style="@style/AppTheme.TextBlackLarge"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@id/tv_email"
        android:layout_alignStart="@+id/tv_email"/>

    <TextView
        android:id="@+id/tv_email_value"
        style="@style/AppTheme.TextVcardContactValue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/tv_email"
        android:layout_marginStart="8dp"
        android:layout_toEndOf="@id/tv_email"/>

    <TextView
        android:id="@+id/tv_phone"
        style="@style/AppTheme.TextVcardContactType"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/tv_email"
        android:layout_below="@id/tv_email"
        android:text="@string/text_user_role"/>

    <TextView
        android:id="@+id/tv_role_value"
        style="@style/AppTheme.TextVcardContactValue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/tv_phone"
        android:layout_alignStart="@id/tv_email_value"/>

    <ImageView
        android:id="@+id/iv_action"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:padding="16dp"
        android:src="@drawable/ic_more_vert_24dp"/>

    <View
        android:id="@+id/divider"
        style="@style/Divider"
        android:layout_width="match_parent"
        android:layout_height="@dimen/divider_height"
        android:layout_alignParentBottom="true"/>

</RelativeLayout>